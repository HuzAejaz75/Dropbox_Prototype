package edu.sjsu.cmpe275.aop.aspect;
import org.aspectj.lang.annotation.Aspect;  // if needed

import edu.sjsu.cmpe275.aop.exceptions.NetworkException;

import org.aspectj.lang.annotation.Around;  // if needed
import org.aspectj.lang.ProceedingJoinPoint; // if needed

@Aspect
public class RetryAspect {
    /***
     * Following is a dummy implementation of this aspect.
     * You are expected to provide an actual implementation based on the requirements, including adding/removing advices as needed.
     */
 private static int retryCount=2;
 
	@Around("execution(* edu.sjsu.cmpe275.aop.ProfileService.*(..))")
	public void retryNetworkAdvice(ProceedingJoinPoint joinPoint) throws Throwable {
		boolean check = true;
		while(check)
		{
			try{
				joinPoint.proceed();
				check=false;
			}
			catch(NetworkException e)
			{
				if(retryCount>0)
				{	
			     	System.out.println("Network Failure trying "+retryCount+" more time");
					retryCount--;
				}
				else {
					check=false;
					throw new NetworkException("Network failure");
					};
			}
		}
	}
}